<%=render "menu"%>




<h4>Course Name: <%=@course.name%></h4>
<h4>Teacher: <%= link_to @course.teacher.full_name, "/teachers/#{@course.teacher_id}"%></h4>

<p>
Assignments For This Course:

<ul>
    <%@course.assignments.each do |assignment|%>
        <li>
            <%= assignment.date link_to assignment.description "/assignments/#{assignment.id}"%>
        </li>
    <%end%>
</ul>
<br>
<%= link_to "Add An Assignment For This Course", "/assignments/new" %>
<br>
<br>
<br>
Students Enrolled In This Course:
<ul>
    <%@course.students.each do |student|%>
        <li>
            <%= link_to student.full_name, "/students/#{student.id}"%>
        </li>
    <%end%>
</ul>
<br>
<br>

<%= link_to "Edit This Course", "/courses/#{@course.id}/edit" %>
</p>